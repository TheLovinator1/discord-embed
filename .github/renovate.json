{
  "extends": [
    "config:base"
  ],
  "enabledManagers": [
    "docker-compose",
    "dockerfile",
    "poetry"
  ],
  "platformCommit": true,
  "platformAutomerge": true,
  "labels": [
    "dependencies"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true
    },
    {
      "matchDepTypes": [
        "devDependencies"
      ],
      "automerge": true
    },
    {
      "extends": [
        "packages:linters",
        "packages:test"
      ],
      "automerge": true
    }
  ],
  "dependencyDashboard": false,
  "lockFileMaintenance": {
    "enabled": true,
    "extends": [
      "schedule:weekly"
    ]
  },
  "ignoreTests": false,
  "docker": {
    "enabled": true
  },
  "vulnerabilityAlerts": {
    "enabled": true
  },
  "timezone": "Europe/Stockholm"
}